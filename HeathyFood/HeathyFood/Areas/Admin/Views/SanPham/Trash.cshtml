@model IEnumerable<HeathyFood.Models.Entities.SanPham>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Danh sách Sản Phẩm</strong>
                    </div>
                    <div class="col-md-6 text-right">

                        <a href="@Url.Action("Index", "SanPham")" class="btn btn-sm btn-info">

                            <img src="~/Publics/images/icon/back.png" />
                            Back
                        </a>

                    </div>
                </div>

            </div>
            <div class="card-body text-center">


                <table class="table table-bordered table-striped" id="myTable">
                    <thead>

                        <tr>
                            <th>
                                Tên Sản Phẩm
                            </th>


                            <th>
                                Giá
                            </th>
                            <th>
                                Khuyến Mãi
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody id="tblSanPhamCbXoa">
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<div class="modal" tabindex="-1" role="dialog" id="modalXoa">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="panel panel-default text-center" style="font-family:Bahnschrift">
                <div class="panel-heading">
                    <h4 class="panel-tiRPe py-3 text-danger text-uppercase text-center" style="background-color:bisque;">Xóa</h4>

                </div>

                <p>Bạn có muốn xóa Sản Phẩm này không?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" style="margin-right:90px;" id="btnDelete">Xác nhận</button>
                <button type="button" class="btn btn-secondary" style="margin-right:120px;" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Publics/js/jquerySanPham.js"></script>
    <script>

        $(document).ready(function () {
            LoadDsSanPhamCbXoa();

        });


    </script>
}