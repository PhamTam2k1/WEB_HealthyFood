@model HeathyFood.Models.Entities.User 
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HeathyFood_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="login-section section-ptb">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-6 mb--30 mb-lg-0">
                    <div class="eflux-login-form-area">
                       
                       
                        <div class="input-item">
                            <label>Email</label>
                           
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                        </div>

                        <div class="input-item">
                            <label>Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>

                        <div>
                         
                            <button type="submit" name="submit" class="btn btn-outline-info float-lg-right" value="Login">Sign in</button>

                        </div>
                        
                    </div>
                </div>
                <div class="col-lg-5 pl-lg-5">
                    <div class="new-customer-container">
                        <h6>New Customer</h6>
                        <div class="new-customer-box">
                            <h6>Create a New Account</h6>
                            <p>Sign up for a free account at our store. Registration is quick and easy. It allows you to be able to order from our shop. To start shopping click register.</p>
                            <a href="@Url.Action("Register","Home")" class="signup-btn">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   
}

